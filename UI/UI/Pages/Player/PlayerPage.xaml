<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:player="clr-namespace:SINTEF.AutoActive.UI.Pages.Player"
             xmlns:views="clr-namespace:SINTEF.AutoActive.UI.Views"
             x:Class="SINTEF.AutoActive.UI.Pages.Player.PlayerPage">
    <ContentPage.Content>
        <Grid x:Name="PageGrid" RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="{x:Static views:CustomNavigationBar.DefaultHeight}" />
                <RowDefinition x:Name="RowMain" Height="*" />
                <RowDefinition x:Name="RowPlaybar" Height="Auto" />
                <RowDefinition x:Name="Dis" Height="0"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition x:Name="ColumnSplitter" Width="{x:Static player:PlayerSplitterView.DefaultWidth}" />
                <ColumnDefinition x:Name="ColumnTree" Width="{x:Static player:PlayerTreeView.DefaultWidth}" />
            </Grid.ColumnDefinitions>
            <!-- Content -->
            <views:CustomNavigationBar x:Name="NavigationBar" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" />
            <player:PlayerGridLayout x:Name="PlayerGrid" Grid.Row="1" Grid.Column="0" />
            <player:PlayerSplitterView x:Name="Splitter" Grid.Row="1" Grid.Column="1" />
            <player:PlayerTreeView x:Name="TreeView" Grid.Row="1" Grid.Column="2" />
            <player:PlaybarView x:Name="Playbar" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" />
            
            <AbsoluteLayout x:Name="OverlayLayout" Grid.Row="3" Grid.Column="0">
                <BoxView x:Name="OverlayShading" IsVisible="False" Color="Black" AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="0,0,1,1"/>
            </AbsoluteLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
